generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode      = "prisma"
}

model Identity {
  id String @id @default(uuid())

  emailAddress      String        @unique
  password          String
  verified          Boolean       @default(false)
  enabled           Boolean       @default(false)
  cookiesAccepted   Boolean       @default(false)
  salt              String
  loginCcount       Int           @default(0)
  lastLoginAt       DateTime?
  passwordRequested Boolean       @default(false)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime?
  AuthSession       AuthSession[]

  @@index([emailAddress], name: "idx_identity_email-address")
  @@map("identity")
}

model AuthSession {
  id           String    @id @default(uuid())
  identityId   String
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  createdAt    DateTime  @default(now())
  updatedAt    DateTime?

  identity Identity @relation(fields: [identityId], references: [id])

  @@index([identityId], name: "idx_auth-session_identity-id")
  @@index([accessToken], name: "idx_auth-session_access-token")
  @@index([refreshToken], name: "idx_auth-session_refresh-token")
  @@map("auth_session")
}

model Subscriber {
  id        String    @id @default(uuid())
  email     String    @unique @db.VarChar(255)
  firstName String    @db.VarChar(255)
  lastName  String    @db.VarChar(255)
  createdAt DateTime  @default(now())
  updatedAt DateTime?

  @@index([email], name: "idx_subscriber_email")
  @@map("subscriber")
}
